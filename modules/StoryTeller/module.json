{
  "name": "StoryTeller",
  "version": "1.0.0",
  "description": "AI-powered narrative storytelling system for RPG interactions",
  "category": "AI Services",
  "project": "Ex Nihilo",
  "tags": [
    "storyteller",
    "narrative",
    "ai",
    "openrouter",
    "rpg"
  ],
  "scripts": {
    "install": "npm install --include=dev",
    "build": "npm run build",
    "typecheck": "npm run typecheck",
    "start": "npm start",
    "dev": "npm run dev"
  },
  "env": [
    {
      "key": "PORT",
      "description": "Port number for the StoryTeller server",
      "required": false,
      "defaultValue": "3037",
      "type": "number"
    },
    {
      "key": "OPENROUTER_API_KEY",
      "description": "OpenRouter API key for AI-powered narrative generation",
      "required": true,
      "type": "string",
      "secret": true
    },
    {
      "key": "OPENROUTER_MODEL",
      "description": "OpenRouter model to use for storytelling",
      "required": false,
      "defaultValue": "anthropic/claude-3.5-sonnet",
      "type": "string"
    },
    {
      "key": "MYSQL_HOST",
      "description": "MySQL database host",
      "required": false,
      "defaultValue": "localhost",
      "type": "string"
    },
    {
      "key": "MYSQL_PORT",
      "description": "MySQL database port",
      "required": false,
      "defaultValue": "3306",
      "type": "number"
    },
    {
      "key": "MYSQL_USER",
      "description": "MySQL database user",
      "required": false,
      "defaultValue": "root",
      "type": "string"
    },
    {
      "key": "MYSQL_PASSWORD",
      "description": "MySQL database password",
      "required": true,
      "type": "string",
      "secret": true
    },
    {
      "key": "MYSQL_DATABASE",
      "description": "MySQL database name",
      "required": false,
      "defaultValue": "storyteller",
      "type": "string"
    }
  ]
}
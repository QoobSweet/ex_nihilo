{
  "name": "workflow-automation-system",
  "version": "1.0.0",
  "description": "Automated workflow execution and management system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --watch --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "workflow:execute": "ts-node src/cli/workflow-runner.ts",
    "workflow:validate": "ts-node src/cli/workflow-validator.ts",
    "workflow:debug": "NODE_OPTIONS='--inspect' ts-node src/cli/workflow-runner.ts",
    "clean": "rm -rf dist coverage",
    "prepare": "npm run build",
    "pretest": "npm run build"
  },
  "keywords": [
    "workflow",
    "automation",
    "ci-cd",
    "typescript"
  ],
  "author": "Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "dompurify": "^3.0.8",
    "isomorphic-dompurify": "^2.9.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/dompurify": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}